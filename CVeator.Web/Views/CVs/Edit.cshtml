@model CVeator.Entities.PersonalInfo



<h2>Edit CV</h2>

<div  class="container">
    <form id="EditForm">
        <input type="hidden" name="ID" value="@Model.ID" />

        <div class="form-group">
            <label>FirstName</label>
            <input name="FirstName" value="@Model.FirstName" />
            <br />
        </div>
        <div class="form-group">
            <label> LastName</label>
            <input name="LastName" value="@Model.LastName" />
            <br />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input name="Address" value="@Model.Address" />
            <br />
        </div>
        <div class="form-group">
            <label>City</label>
            <input name="City" value="@Model.City" />
            <br />
        </div>
        <div class="form-group">
            <label>ZipCode</label>
            <input name="ZipCode" value="@Model.ZipCode" />
            <br />
        </div>
        <div class="form-group">
            <label>Country</label>
            <input name="Country" value="@Model.Country" />
            <br />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input name="Email" value="@Model.Email" />
            <br />
        </div>
        <div class="form-group">
            <label>PhoneNumber</label>
            <input name="PhoneNumber" value="@Model.PhoneNumber" />
            <br />
        </div>

        <button type="button" id="SaveButton">Save</button>

</form>

</div>
<script>
    $("#SaveButton").click(function () {
        debugger;
        $.ajax({
            url: "@Url.Action("Edit","CVs")",
            type: "post",
            data: $("#EditForm").serialize()
        }).done(function (response) {
            $("#ListArea").html(response);
           $("#formModal").modal("toggle");
        });
    });
</script>





