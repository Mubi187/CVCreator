@model CVeator.Entities.Education



<h2>Edit Experience</h2>

<div class="container">
    <form id="EditForm">
        <input type="hidden" name="ID" class="form-control" value="@Model.ID" />

        <div class="form-group">
            <label>SchoolName</label>
            <input name="SchoolName" class="form-control" value="@Model.SchoolName" />
            <br />
        </div>
        <div class="form-group">
            <label>City</label>
            <input name="City" class="form-control" value="@Model.City" />
            <br />
        </div>
        <div class="form-group">
            <label>State</label>
            <input name="State" class="form-control" value="@Model.State" />
            <br />
        </div>
        <div class="form-group">
            <label>Degree</label>
            <input name="Degree" class="form-control" value="@Model.Degree" />
            <br />
        </div>
        <div class="form-group">
            <label>FielOfStudy</label>
            <input name="FielOfStudy" class="form-control" value="@Model.FielOfStudy" />
            <br />
        </div>
        <div class="form-group">
            <label>GraduationDate</label>
            <input name="GraduationDate" class="form-control" value="@Model.GraduationDate" />
            <br />
        </div>

        <button type="button" id="SaveButton">Save</button>

    </form>

</div>
<script>
    $("#SaveButton").click(function () {
        debugger;
        $.ajax({
            url: "@Url.Action("Edit","Educations")",
            type: "post",
            data: $("#EditForm").serialize()
        }).done(function (response) {
            $("#ListArea").html(response);
           $("#formModal").modal("toggle");
        });
    });
</script>






